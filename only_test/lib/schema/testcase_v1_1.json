{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://only-test/schema/testcase_v1_1.json",
  "title": "Only-Test Testcase v1.1",
  "type": "object",
  "required": ["testcase_id", "target_app", "execution_path"],
  "properties": {
    "testcase_id": {"type": "string"},
    "name": {"type": "string"},
    "description": {"type": "string"},
    "target_app": {"type": "string"},
    "variables": {"type": "object"},
    "metadata": {"type": "object"},
    "execution_path": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["action"],
        "properties": {
          "step": {"type": ["integer", "string"]},
          "page": {"type": ["string", "null"]},
          "action": {
            "type": "string",
            "enum": [
              "click",
              "input",
              "wait",
              "wait_for_elements",
              "restart",
              "launch",
              "assert",
              "swipe"
            ]
          },
          "description": {"type": ["string", "null"]},
          "target": {
            "type": ["object", "string", "null"],
            "properties": {
              "priority_selectors": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "resource_id": {"type": "string"},
                    "content_desc": {"type": "string"},
                    "text": {"type": "string"},
                    "class": {"type": "string"}
                  },
                  "additionalProperties": true
                }
              },
              "selectors": {"$ref": "#/properties/execution_path/items/properties/target/properties/priority_selectors"},
              "resource_id": {"type": "string"},
              "content_desc": {"type": "string"},
              "text": {"type": "string"},
              "bounds_px": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {"type": "number"}
              },
              "swipe": {
                "type": "object",
                "properties": {
                  "start_px": {"type": "array", "minItems": 2, "maxItems": 2, "items": {"type": "number"}},
                  "end_px": {"type": "array", "minItems": 2, "maxItems": 2, "items": {"type": "number"}},
                  "duration_ms": {"type": "integer", "minimum": 0}
                },
                "required": ["start_px", "end_px"],
                "additionalProperties": false
              }
            },
            "additionalProperties": true
          },
          "data": {"type": ["string", "null"]},
          "timeout": {"type": ["number", "null"]},
          "success_criteria": {"type": ["string", "null"]},
          "path": {"type": ["object", "null"]}
        },
        "additionalProperties": true
      }
    },
    "assertions": {"type": "array"}
  },
  "additionalProperties": true
}

